<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actual_transactions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back3"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24">
        </ImageView>

        <TextView
            android:id="@+id/transactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="36dp"
            android:paddingStart="10dp"
            android:text="Transactions"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginStart="115dp"
        android:layout_marginTop="120dp"
        android:elevation="200dp"
        android:visibility="visible"
        app:cardBackgroundColor="#FEFEFE"
        app:cardCornerRadius="100dp"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/profilephoto"
            android:layout_width="380dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ashika" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/pay"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:text="Paying"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/payername"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="300dp"
        android:gravity="center_vertical"
        android:text="Ashika Patel"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/payeracc"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="340dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="123456798654"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/Rupee"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/payeracc"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView2"
        android:backgroundTint="#FBFBFB"
        android:ems="5"
        android:hint="0"
        android:inputType="numberDecimal"
        android:paddingStart="15dp"
        android:text="0"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/payeracc"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="135dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="$"
        android:textSize="38sp" />

    <Button
        android:id="@+id/transaction"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="530dp"
        android:background="@drawable/rectanglebutton"
        android:gravity="center"
        android:text="Make Payment"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>